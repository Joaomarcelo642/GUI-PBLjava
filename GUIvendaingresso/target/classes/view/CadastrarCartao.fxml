<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.CadastrarCartaoController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Cadastrar Cartão de Crédito" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <TextField fx:id="nomeTitularField" promptText="Nome do Titular"/>
    <TextField fx:id="numeroCartaoField" promptText="Número do Cartão"/>
    <Button text="Salvar Cartão" onAction="#salvarCartao" />
    <Button text="Cancelar" onAction="#cancelar" />
</VBox>
