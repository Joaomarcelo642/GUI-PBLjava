<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="286.0" prefWidth="405.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.LoginController">
    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="50" prefHeight="200.0" prefWidth="300.0" spacing="10">
            <Label style="-fx-font-size: 18px;" text="Login do Sistema" />
            <TextField fx:id="fieldLogin" promptText="Login" />
            <PasswordField fx:id="fieldSenha" promptText="Senha" />
            <Button onAction="#handleLogin" text="Entrar" />
            <Hyperlink onAction="#handleGoToCadastro" text="Cadastrar-se" />
        </VBox>
    </children>
</AnchorPane>
